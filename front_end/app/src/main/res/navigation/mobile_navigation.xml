<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_meals">

    <fragment
        android:id="@+id/navigation_meals"
        android:name="com.example.nutritiontracker.ui.meals.MealsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_meals" />

    <fragment
        android:id="@+id/navigation_progress"
        android:name="com.example.nutritiontracker.ui.progress.ProgressFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_progress" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.nutritiontracker.ui.settings.SettingsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_settings" />
</navigation>